@model InterfazBasica_DCStore.Models.ViewModels.DicomServerVM

<form method="post" asp-controller="Gateway">
    <!-- Tarjeta de Servidor DICOM -->
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            Servidor DICOM - Gateway
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Información del Servidor -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Host" class="form-label">IP:</label>
                        <input asp-for="Host" type="text" id="Host" class="form-control" value="@Model.Host" readonly />
                    </div>
                    <div class="form-group">
                        <label for="Port" class="form-label">Puerto:</label>
                        <input asp-for="Port" type="text" id="Port" class="form-control" value="@Model.Port" readonly />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Estado:</label>
                        <input type="text" class="form-control" value="@Model.Estatus" readonly />
                    </div>
                </div>

                <!-- Botones de Control -->
                <div class="col-md-6">
                    <div class="form-group">
                        <button type="submit" asp-action="Start" class="btn btn-success mb-3">Iniciar</button>
                        <button type="submit" asp-action="Stop" class="btn btn-danger mb-3">Detener</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Campo de Resultado -->
<div class="row mt-3">
    <div class="col-md-12">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }
    </div>
</div>