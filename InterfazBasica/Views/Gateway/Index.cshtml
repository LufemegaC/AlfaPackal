@model InterfazBasica_DCStore.Models.ViewModels.DicomServerVM

@section Styles {
    <link rel="stylesheet" href="~/css/StyleServer.css" asp-append-version="true" />
}


<form method="post" asp-controller="Gateway">
    <!-- Tarjeta de Servidor DICOM -->
    <div class="wrapper">
        <div class="server_box">
            <div class="login-header">
                <span>DICOM Server</span>
            </div>

            <div class="main_board">
                <div class="input_group">
                    <div class="input_box">
                        <input asp-for="Host" type="text" id="Host" class="form-control input-field" value="@Model.Host" readonly />                    
                        <label for="Host" class="label">IP</label>
                        <i class='bx bx-log-out-circle icon'></i>
                    </div>
                    <div class="input_box">
                        <input asp-for="Port" type="text" id="Port" class="form-control input-field" value="@Model.Port" readonly />
                        <label for="Port" class="label">Port</label>
                        <i class='bx bx-window-open icon'></i>
                    </div>
                    <div class="input_box">
                        <input asp-for="Estatus" type="text" id="Estatus" class="form-control input-field" value="@Model.Estatus" readonly />
                        <label for="Estatus" class="label">Estatus</label>
                        <i class='bx bx-revision icon'></i>
                    </div>
                </div>
                <div class="server_img">
                    <img src="~/img/logoServer.png" alt="">
                    <input type="submit" class="red-submit" value="Validar conexion con nube">
                </div>
            </div>
            <div class="input_box">
                <button type="submit" asp-action="Start" class="input-submit">Iniciar</button>
                <button type="submit" asp-action="Stop" class="input-submit">Detener</button>
                <button type="submit" asp-action="Back" class="input-submit">Atras</button>
            </div>
        </div>
    </div>
</form>

<!-- Campo de Resultado -->
<div class="row mt-3">
    <div class="col-md-12">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}