@model WorkStation.Models.ViewModels.DicomClienteVM

<form method="post" asp-controller="Workstation">
    <!-- Tarjeta de Cliente DICOM -->
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            Cliente DICOM - WorkStation
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Información del Cliente -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="CallingAe" class="form-label">AE Title:</label>
                        <input asp-for="CallingAe" type="text" id="CallingAe" class="form-control" value="@Model.CallingAe" readonly />
                    </div>
                    <div class="form-group">
                        <label for="Port" class="form-label">Puerto:</label>
                        <input asp-for="Port" type="text" id="Port" class="form-control" value="@Model.Port" readonly />
                    </div>
                    <div class="form-group">
                        <label for="Host" class="form-label">IP:</label>
                        <input asp-for="Host" type="text" id="Host" class="form-control" value="@Model.Host" readonly />
                    </div>
                </div>

                <!-- Botones de Control -->
                <div class="col-md-6">
                    <div class="form-group">
                        <button type="button" asp-action="Connect" class="btn btn-success mb-3">Conectar</button>
                        <button type="button" asp-action="Disconnect" class="btn btn-warning mb-3">Desconectar</button>
                        <button asp-action="Exit" class="btn btn-danger mb-3">Salir</button>
                    </div>
                </div>
            </div>

            <!-- Seleccionar Archivo DICOM -->
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="dicomFile" class="form-label">Seleccionar Archivo DICOM:</label>
                        <input type="file" asp-for="DicomFile" class="form-control" id="dicomFile">
                    </div>
                    <div class="form-group">
                        <button type="submit" asp-action="SendDicomFile" class="btn btn-primary">Enviar Archivo</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Campo de Resultado -->
    <div class="row mt-3">
        <div class="col-md-12">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }
        </div>
    </div>
</form>
